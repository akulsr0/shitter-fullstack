<html>
  <head>
    <title><%=user.name%></title>
    <style>
      @import url('https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap');
      @import url('https://fonts.googleapis.com/css?family=Acme&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      a {
        text-decoration: none;
        color: unset;
      }
      .dashboardHeader {
        width: 100%;
        height: 40px;
        background-color: #3c6382;
        display: flex;
        flex-direction: row;
      }

      .headerLeft {
        height: 40px;
        display: flex;
        flex: 1;
        flex-direction: row;
        align-items: center;
      }

      .headerRight {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding-right: 20px;
      }

      .headerUsername {
        font-weight: 700;
        font-family: 'Lato';
        color: #f5f5fa;
        margin-left: 14px;
        cursor: pointer;
      }

      .logoutButton {
        width: 80px;
        height: 30px;
        background-color: #0a3d62;
        border: none;
        color: #f5f5fa;
        border-radius: 6px;
        font-family: 'Lato';
        font-weight: 500;
        font-size: 16px;
        cursor: pointer;
      }

      .navDiv {
        display: flex;
        flex-direction: row;
        justify-content: center;
        margin-top: 16px;
      }

      .navDiv a {
        text-decoration: none;
        margin-left: 10px;
        margin-right: 10px;
        font-family: 'Lato';
        font-weight: 500;
        color: #0a3d62;
      }
      .userDP {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: none;
        margin-right: 8px;
      }
      .userProfileDiv {
        width: 80%;
        margin-top: 20px;
      }
      .userProfileInfo h1 {
        font-family: 'Lato';
        font-weight: 900;
        margin-top: 10px;
      }
      .userProfileInfo small {
        font-family: 'Lato';
        font-weight: 400;
        font-style: italic;
        font-size: 16px;
      }
      .userProfileInfo ul {
        list-style: none;
        margin-top: 10px;
        font-family: 'Lato';
        font-weight: 400px;
      }
      .infoItemDiv {
        width: fit-content;
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 4px;
        padding-bottom: 4px;
        border-radius: 4px;
        margin-top: 10px;
        background-color: #f5f5fa;
      }
      .userActionDiv {
        display: flex;
        flex-direction: row;
        justify-content: center;
        margin-top: 14px;
      }
      .actionButton {
        padding-left: 12px;
        padding-right: 12px;
        padding-top: 4px;
        padding-bottom: 4px;
        font-family: 'Lato';
        font-weight: 500;
        border: none;
        background-color: #0a3d62;
        margin-left: 6px;
        margin-right: 6px;
        color: #fff;
        cursor: pointer;
        font-size: 16px;
        border-radius: 4px;
      }
    </style>
  </head>
  <body bgcolor="#60a3bc">
    <header class="dashboardHeader">
      <div class="headerLeft">
        <h3 class="headerUsername" onclick="gotoHome()">
          <%= currentUser.name %>
        </h3>
      </div>
      <div class="headerRight">
        <form method="POST" action="/logout">
          <button class="logoutButton">Logout</button>
        </form>
      </div>
    </header>
    <div class="navDiv">
      <a href="/">Home</a>
      <a href="/find">Find People</a>
      <a href="/posts/<%=user._id%>">Your Posts</a>
      <a href="/profile">Edit Profile</a>
    </div>
    <center>
      <hr size="0.01" color="#3c6382" width="60%" style="margin-top: 4px;" />
    </center>
    <center>
      <div class="userProfileDiv">
        <div>
          <% if(user.gender=='Male') { %>
          <img
            src="https://banner2.cleanpng.com/20180615/rtc/kisspng-avatar-user-profile-male-logo-profile-icon-5b238cb002ed52.870627731529056432012.jpg"
            class="userDP"
          />
          <% } else { %>
          <img
            src="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_female-512.png"
            class="userDP"
          />
          <% } %>
        </div>
        <div class="userProfileInfo">
          <h1><%=user.name%></h1>
          <small><%= user.bio%></small>
          <div class="userActionDiv">
            <form action="" method="post">
              <button class="actionButton">Add Friend</button>
            </form>
            <form action="" method="post">
              <button class="actionButton">Message</button>
            </form>
          </div>
          <ul>
            <li>
              <div class="infoItemDiv">
                <strong>Email:</strong>&nbsp;&nbsp;<%=user.email%>
              </div>
            </li>
            <li>
              <div class="infoItemDiv">
                <strong>Country:</strong>&nbsp;&nbsp;<%=user.country%>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </center>
  </body>
</html>
